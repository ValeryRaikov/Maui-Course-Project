<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentsManagement.Views.SettingsView"
             xmlns:vm="clr-namespace:StudentsManagement.ViewModels"
             x:DataType="vm:SettingsViewModel"
             Title="Settings">
    <VerticalStackLayout Padding="20">
        <Label Text="Switch Appearance" FontSize="18" FontAttributes="Bold" />
        <Switch x:Name="DarkModeSwitch" IsToggled="{Binding IsDarkMode}" Toggled="DarkModeSwitch_Toggled" />
    </VerticalStackLayout>

</ContentPage>